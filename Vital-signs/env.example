# Vital Sign Listener Configuration
# Copy this file to .env and update the values

# ===========================================
# API Server Configuration (API V1)
# ===========================================

# Base URL of the API server (without trailing slash)
# Include port if not using default port 80
# Example: http://10.21.20.114:88/api/v1
API_BASE_URL=http://10.21.20.114:88/api/v1

# API Passphrase for X-Passphrase header (required for every request)
API_PASSPHRASE=qmedno1

# ===========================================
# API User Credentials (included in request body)
# ===========================================

# Username for API authentication
API_USERNAME=gateway_user

# Password for API authentication
API_PASSWORD=your_password

# ===========================================
# Monitor Device Configuration
# ===========================================

# IP address of the medical monitor device
MONITOR_IP=192.168.0.5

# ===========================================
# Polling Configuration
# ===========================================

# Polling interval in seconds (how often to check for new data)
POLL_INTERVAL=2

# Patient data refresh interval (number of iterations before refreshing patient data)
REFRESH_INTERVAL=10

# ===========================================
# Auto-Reconnect Configuration
# ===========================================

# Maximum consecutive connection errors before reconnecting (not used - auto-reconnect always enabled)
MAX_CONNECTION_ERRORS=3

# Delay in seconds before attempting to reconnect after connection failure
RECONNECT_DELAY=10

# Enable debug mode to see detailed logging including raw device values
DEBUG_MODE=false



